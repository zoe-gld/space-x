<%= simple_form_for [@space] do |f| %>
  <% if @space.errors.any? %>
    <div class="alert alert-danger">
      <h4>Warning! You have some errors:</h4>
        <ul>
          <% @space.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
  <% end %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :category %>
    <%= f.input :cover_image %>
    <%= f.input :published %>
  </div>

  <div class="form-actions btn-primary btn">
    <%= f.button :submit %>
  </div>

<% end %>
